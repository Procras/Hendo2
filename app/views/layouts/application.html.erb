<!DOCTYPE html>
<html>
<head>
  <title>Hendo2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <ul class="nav nav-tabs">
    <li><% if user_signed_in? %></li>
    <li><%= link_to "Events", root_path %></li>
    <li><%= link_to "Documents", documents_path %></li>
    <li><%= link_to "Beacons", beacons_path %></li>
    <li><%= link_to "EDBs", edbs_path %></li>
    <li><%= link_to "Guests", guests_path %></li>
    <li><%= link_to "EdbGuests", edbguests_path %></li>
    <li><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
    <% else %>
    <% end %>
  </ul>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:notice] %>
  </div>
  <% elsif flash[:error] %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:error] %>
  </div>
  <% elsif flash[:alert] %>
  <div class="alert">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= flash[:alert] %>
  </div>
  <% end %>
<%= yield %>

</body>
</html>
