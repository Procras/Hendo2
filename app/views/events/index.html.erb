<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Logo</th>
          <th>Welcome msg</th>
          <th>Description</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Note</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= image_tag event.image.url(:thumb) %></td>
            <td><%= event.welcome_msg %></td>
            <td><%= event.description %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= event.note %></td>
            <td><%= event.name %></td>
            <td><%= link_to 'Show', event, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_event_path(event), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', event, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Create Event', new_event_path, class: 'btn btn-mini' %>
