<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Link</th>
          <th>Note</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @documents.each do |document| %>
          <tr>
            <td><%= document.name %></td>
            <td><%= document.link %></td>
            <td><%= document.note %></td>
            <td><%= link_to 'Show', document, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_document_path(document), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', document, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Add Document', new_document_path, class: 'btn btn-mini' %>
