<p id="notice"><%= notice %></p>

<h1>Listing Guests</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>Status</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @guests.each do |guest| %>
          <tr>
            <td><%= guest.email %></td>
            <td><%= guest.password %></td>
            <td><%= guest.status %></td>
            <td><%= link_to 'Show', guest, class: 'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_guest_path(guest), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', guest, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'Add Guest', new_guest_path, class: 'btn btn-mini' %>
